generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid()) @map("_id") @db.ObjectId
  login    String @unique
  name     String
  password String
  type     Role   @default(WAITER)

  orders   Order[] @relation("UserOrders")

  @@map("users")
}

model Order {
  id        String   @id @default(cuid()) @map("_id") @db.ObjectId
  table     Int
  description String
  status    OrderStatus @default(PENDING)
  createdAt DateTime @default(now())
  
  waiter   User   @relation("UserOrders", fields: [waiterId], references: [id])
  waiterId String @db.ObjectId

  @@map("orders")
}

enum Role {
  ADMIN
  WAITER
  CHEF
}

enum OrderStatus {
  PENDING
  PREPARING
  DONE
}